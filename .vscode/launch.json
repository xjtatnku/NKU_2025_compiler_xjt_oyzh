{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "dbg main",
            "program": "${workspaceFolder}/bin/compiler",
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "internalConsoleOptions": "openOnSessionStart",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "args": ["-S", "-o", "test.s", "test.sy", "-O2"],   // 将参数修改为你需要调试的参数
            "preLaunchTask": "build"
        }
    ]
}
